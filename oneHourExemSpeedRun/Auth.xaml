<Window x:Class="oneHourExemSpeedRun.Auth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:oneHourExemSpeedRun"
        mc:Ignorable="d"
        Title="KompService" Height="450" Width="800" MaxHeight="600" MaxWidth="1600" MinHeight="300" MinWidth="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="12*"/>
            <RowDefinition Height="188*"/>
            <RowDefinition Height="17*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" Height="358" VerticalAlignment="Bottom" Margin="0,0,0,9">
            <Label Content="Авторизация" FontSize="32 " Width="204" Margin="0, 10"/>
            <Label Content="Введите логин" Margin="20" Width="237"/>
            <TextBox x:Name="tbLogin" TextWrapping="Wrap" Width="240" Height="30" Margin="1"/>
            <Label Content="Введите пароль" Margin="20" Width="241"/>
            <TextBox x:Name="tbPassword" TextWrapping="Wrap" Width="240" Height="30" Margin="1"/>
            <Button x:Name="btnAuth" Content="Войти" Width="177" Margin="20" FontSize="14" Click="btnAuth_Click"/>
        </StackPanel>

    </Grid>
</Window>
